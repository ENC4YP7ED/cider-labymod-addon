/* Track History Activity Styling */

.history-container {
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  padding: 10;

  .history-title {
    left: 50%;
    alignment-x: center;
    top: 10;
    font-size: 16;
    font-weight: bold;
    margin-bottom: 15;
  }

  .no-history-info {
    left: 50%;
    alignment-x: center;
    top: 50%;
    alignment-y: center;
    font-size: 12;
  }

  Scroll {
    width: 90%;
    height: 80%;
    top: 40;
    left: 50%;
    alignment-x: center;

    .track-history-list {
      left: 0;
      top: 0;
      width: 100%;
      height: fit-content;
      space-between-entries: 2;
      selectable: true;
    }

    Scrollbar {
      left: 0;
      top: 0;
      width: 5;
      height: 100%;
      margin-left: 5;
    }
  }
}

/* Track History Item Widget */
.track-history-item {
  width: 100%;
  height: 36;
  padding: 6;
  background-color: rgba(0, 0, 0, 0.3);
  border-radius: 3;

  .track-name {
    left: 8;
    top: 6;
    font-size: 13;
    font-weight: bold;
  }

  .artist-info {
    left: 8;
    top: 20;
    font-size: 11;
  }

  &:hover {
    background-color: rgba(0, 0, 0, 0.5);
  }

  &:selected {
    background-color: rgba(29, 185, 84, 0.3);
    border: 1 #1db954;
  }
}
